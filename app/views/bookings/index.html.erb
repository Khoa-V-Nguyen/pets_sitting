<h1>All Bookings</h1>
<h2> <%= link_to 'Book another Pet', new_booking_path %> </h2>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Animal Name</th>
      <th>Animal Type</th>
      <th>Hours Requested</th>
      <th>Date of Service</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr id="id-<%= booking.id %>" >
        <td><%= booking.first_name %></td>
        <td><%= booking.last_name %></td>
        <td><%= booking.animal_name %></td>
        <td><%= booking.animal_type %></td>
        <td><%= booking.hours_requested %></td>
        <td><%= booking.date_of_service %></td>
      </tr>
    <% end %>
  </tbody>
</table>
